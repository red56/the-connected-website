<div id="page">

	<div class="largeForm">

	  <h1><%= @page_title = "Login" %></h1>
    
	   <% if flash_value == "<p>Invalid login or password.</p>" %>
		  <p class="passwordChanged">
		    Please note that passwords had to be reset on October 6th, to move to the new site. <%= link_to "Click here", forgot_password_url %> to retrieve your login name and new password.
		  </p>
		<% end %>

	  <% form_tag sessions_path do %>
	    <p>
	      <%= label_tag "login", "User name" %>
	      <%= text_field_tag 'login', params[:login], :class => "largeInput" %>
	    </p>
  
	    <p>
	      <%= label_tag "password" %>
	    	<%= password_field_tag 'password', params[:password], :class => "largeInput" %>
	    </p>  
  
	    <p class="rightLabel">
	  	  <%= check_box_tag 'remember_me', "1", params[:remember_me] %>
				<%= label_tag :remember_me, "Remember me on this computer", :class => :right %>
	    </p>
  
	    <p class="submitBlock">
	  	  <%= submit_tag 'Log in' %>  <%= link_to "Forgot your username or password?", forgot_password_url %>
	  	</p>
		
	  <% end -%>


       <%= render :partial => 'users/join_suspended' %>

	</div>
</div>
<% @current_tab = :home %>

	<div id="sidebar">

    <div id="largeDescription">
      <p>Open Studio is an online exhibition of work by the students of Architecture at the University of Westminster.</p>

      <p>This online archive is a collection of work from undergraduate and postgraduate courses as well as research collectives.</p>
      
    </div>
    <p><%= link_to "More information...", 'http://www.westminster.ac.uk/sabe' %></p>

	  <div id="subscribe">
      <p><a href="<%= formatted_featured_posts_url(:format => :rss) %>" class="rss">Subscribe to just the features</a></p>
      <p><a href="<%= formatted_posts_url(:format => :rss) %>" class="rss">Subscribe to all posts</a></p>
    </div>
	</div>

	<div id="main">
	
  	<h1>Open Studio</h1>
  	<p id="strapline"><%= APP_NAME %></p>
		<div class="images">
		<% for image in @featured %>
		  <%= link_to image_tag_for(image, :large_square), image.post %>
		<% end %>
		</div>
    <h2>Popular Tags</h2>
    <div class="tagCloud">
  	  <%= render :partial=>'tags/tag_cloud'%>
  	  <p class="more"><%= link_to "View more tags", tags_url %></p>
    </div>

	</div>

	<%= clear_this %>
	

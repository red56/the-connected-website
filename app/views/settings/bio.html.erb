<div id="settings">

		<%= render :partial => 'settings/header' %>
		
		<div id="main">		
				<%= error_messages_for(:user) %>

			  <% form_for @user, :url => settings_url do | f | %>

				  <p>
	    			<%= f.label :profile_text, "Introductory text for your profile (e.g. bio)" %>
	    			<%= f.text_area :profile_text, :class => "largeInput mceEditor" %>
	    		</p>	
			      
          <p>
            <%= f.label :home_page, "Your home page, if you have one" %>
            <%= f.text_field :home_page, :class => :largeInput %>
          </p>

          <p>
            <%= f.label :location, "Your location" %>
            <%= f.text_field :location, :class => :largeInput %>
          </p>
    

			    <p class="submitBlock">
			      <%= submit_tag "Save changes" %>
			    </p>
			  <% end %>
		</div>
</div>

<%= clear_this %>

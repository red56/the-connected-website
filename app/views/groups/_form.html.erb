
  <div class="largeForm">
    <h1><%= @page_title = @group.new_record? ? "Create group" : "Edit group" %></h1>
  
    <% form_for @group do | f | -%>
      <%= f.error_messages %>
    
      <fieldset>
        <p>
          <%= f.label :name, "Group name" %>
          <%= f.text_field :name, :class => "largeInput"  %>
        </p>
      </fieldset>
      
      <fieldset>
              <p>
            <%= f.label :full_desc, "Full description (used on main group page)" %>
            <%= f.text_area :full_desc, :class => "mceEditor largeInput" %>
          </p>  
      <fieldset>

      <fieldset>
          <p>
            <%= f.label :short_desc, "Short description (up to 255 chars - used elsewhere)" %>
            <%= f.text_area :short_desc, :class => "mceEditor largeInput" %>
          </p>  
      <fieldset>

      <fieldset>
          <p>
            <%= f.label :home_page, "Home page, if you have one" %>
            <%= f.text_field :home_page, :class => :largeInput %>
          </p>
      </fieldset>

      <p class="submitBlock">
      	<% if @group.new_record?%>
				    <%= submit_tag  "Create group", :disable_with => "Creating..."  %>
				<% else %>
				    <%= submit_tag  "Save group", :disable_with => "Saving..." %> or <%= link_to "Cancel", @group %>
				<% end %>
      </p>
    
    <% end -%>
 
    
  </div>

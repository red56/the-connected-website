



<div id="sidebar">
  <div id="largeDescription">
    <p><%=@group.profile_text%></p>
  </div>
  <% if !@group.home_page.nil?%>
    <p><%=link_to "Visit home page", @group.home_page %></p>
  <% end %>
  
  <% if logged_in? && current_user.can_moderate?(@group) %>
    <h2>Admin options for this group</h2>
  	<ul>
  	  <li><%= link_to "Edit group", edit_group_path(@group)%></li>
  	  <li><%= link_to "Edit feeds", group_rss_feeds_path(@group)%></li>
    </ul>
  <% end %>
</div>  

<div id="main">  
  <h1>Studio: <%=@group%></h1>
  <%= render :partial=>'posts/post_list'%>
</div>